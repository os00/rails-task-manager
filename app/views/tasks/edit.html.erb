<div class="row">
<div class="col-1">
</div>
<div class="col-5">
<h2>Edit task <em><%= @task.title %></em></h2>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label 'Title: ' %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Details:' %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <div class="form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label 'Task completed', class: "form-check-label" %>
  </div>
  <%= f.submit class: 'btn btn-primary mt-3' %>
<% end %>
</div>
</div>
