<div class="row">
<div class="col-1">
</div>
<div class="col-5">
<h2>Add a new task</h2>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label 'Title:' %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Details: ' %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>
</div>
