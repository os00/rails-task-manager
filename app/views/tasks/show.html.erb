<div class="row">
<div class="col-1">
</div>
<div class="col-5">
  <h2><%= @task.title %></h2>
  <div class="card p-2" style="background-color: #e5e5e5">
  <p><%= @task.details %></p>
  </div>
  <div class="mt-2">
    <p>
      <% if @task.completed %>
        This task is completed.
      <% else %>
        This task is not completed yet.
      <% end %>
    </p>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to 'Back to list', tasks_path, class: "btn btn-primary" %>
    <%= link_to 'Edit  this task', edit_task_path(@task), class: "btn btn-primary"  %>
  </div>
</div>
</div>
